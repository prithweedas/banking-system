{
  "name": "banking-system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "lerna": "^4.0.0",
    "prettier": "^2.2.1"
  },
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna run clean",
    "start:api": "lerna exec --scope=@banking/api -- yarn start:dev",
    "start:task": "lerna run start:dev --stream --scope=@banking/tasks --",
    "script:mongo": "lerna run start:prod --stream --scope=@banking/scripts -- dist/mongo.js",
    "script:kafka": "lerna run start:prod --stream --scope=@banking/scripts -- dist/kafka.js",
    "commit": "cz"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
